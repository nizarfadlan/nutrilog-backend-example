{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
		"baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
			"@/*": ["src/*"]
		}
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "lib": [
      "es2015"
  ]
}
